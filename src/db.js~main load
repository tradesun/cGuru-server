// db.js aa12
// Provides a shared MySQL connection pool used by repositories.
// Configuration is taken from environment variables with sensible defaults.
const mysql = require('mysql2/promise');

const pool = mysql.createPool({
  host: process.env.CGURU_DB_HOST || '127.0.0.1',
  port: process.env.CGURU_DB_PORT ? Number(process.env.CGURU_DB_PORT) : 3306,
  user: process.env.CGURU_DB_USER || 'root',
  password: process.env.CGURU_DB_PASSWORD || '',
  database: process.env.CGURU_DB_NAME || 'cguru',
  waitForConnections: true,
  connectionLimit: 10,
  queueLimit: 0
});

module.exports = pool;


